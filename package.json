{
  "name": "ar-file-format-support",
  "displayName": "ARray File Format",
  "description": "Array Files: Simple, Robust, For Humans And Code",
  "author": {
    "name": "Arda",
    "email": "50584220+devarda@users.noreply.github.com"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devarda/vscode-ar-file-format"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.89.1",
    "typescript": "^4.3.5"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Array File",
      "properties": {
        "arrayFile.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable formatting on save."
        }
      }
    },
    "icon": "images/icon.png",
    "languages": [
      {
        "id": "array-file",
        "aliases": [
          "Array File",
          "array-file"
        ],
        "extensions": [
          ".ar",
          ".array"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "array-file",
        "scopeName": "source.arrayfile",
        "path": "./syntaxes/array-file.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:arrayfile"
  ],
  "main": "./out/extension.js",
  "dependencies": {
    "prettier": "^3.3.1"
  }
}
